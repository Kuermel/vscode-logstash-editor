{
	"rules": {
		"no-unused-expression": true,
		"no-duplicate-variable": true,
		"curly": true,
		"class-name": true,
		"indent": [
			true,
			"tabs"
		],
		"semicolon": [
			true,
			"always"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"no-trailing-spaces": [
			2,
			{
				"skipBlankLines": false
			}
		],
		"triple-equals": true
	},
	"defaultSeverity": "warning"
}